@model GCCommerce.Entities.User

@{
    ViewData["Title"] = "NewLogin";
    Layout = null;
}

<html>
<head>
    <title>Login</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <link href="~/LoginForm/style.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body style="background-image:url('../../wwwroot/LoginForm/images.jpg');">

    <div style="margin-top:10%; margin-left:33%;">
        <div class="col-md-6 login-form-2">
            <h3>Login for Form 2</h3>
            <form action="/UserLogin/CheckLoginusingform">
                <div class="form-group">
                    <input type="text" class="form-control" name="Email" placeholder="Your Email *" required value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" placeholder="Your Password *" required value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
                <div class="form-group">

                    <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
                </div>
            </form>
        </div>
    </div>
    

</body>
</html>
