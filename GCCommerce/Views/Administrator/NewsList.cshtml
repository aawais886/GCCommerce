@model IEnumerable<GCCommerce.Entities.News>

@{
    ViewData["Title"] = "NewsList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>News List</h2>

<p>
    <a asp-action="AddUpdateNews" class="btn btn-primary pull-right">Create New</a>
</p>
<table class="table" id="table" name="table">
    <thead>
        <tr>
            <th hidden> 
                @Html.DisplayNameFor(model => model.NewsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsValue)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.NewsId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsValue)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td hidden>
                    @if (item.DateUpdated != null)
                    {
                        @Html.DisplayFor(modelItem => item.DateUpdated)

                    }
                    else
                    {
                        <strong>Null</strong>
                    } 
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateNews", new { id = item.NewsId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "NewsDetail", new { NewsID = item.NewsId }, new { @class = "btn btn-small btn-primary" }) |
                    @Html.ActionLink("Delete", "NewsDelete", new { NewsID = item.NewsId }, new { @class = "btn btn-small  btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable();

    });
    </script>
}