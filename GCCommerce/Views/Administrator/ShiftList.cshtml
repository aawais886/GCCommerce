@model IEnumerable<GCCommerce.Entities.Shift>

@{
    ViewData["Title"] = "ShiftList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>ShiftList</h2>

<p>
    <a asp-action="AddUpdateShift">Create New</a>
</p>
<table class="table" id="table" name="table">
    <thead>
        <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.ShiftId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shift1)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.DateUpdated)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.ShiftId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift1)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td hidden>
                @if (item.DateUpdated != null)
                {
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                }
                else
                {
                    <strong>Null</strong>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateShift", new { id=item.ShiftId }) |
                @Html.ActionLink("Details", "ShiftDetail", new { ShiftID = item.ShiftId }) |
                @Html.ActionLink("Delete", "ShiftDelete", new { ShiftID = item.ShiftId })
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts{ 
    <script>
        $(document).ready(function () {
            $('#table').DataTable();

        });
        </script>

}
