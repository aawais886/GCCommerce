@model IEnumerable<GCCommerce.Entities.MeritList>

@{
    ViewData["Title"] = "MeritListList";
}

<h2>MeritListList</h2>

<p>
    <a asp-action="AddUpdateMeritList">Create New</a>
</p>
<table class="table" id="table" name="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.MeritListId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkProgramId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeritListValue)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.MeritListId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FkProgramId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeritListValue)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td hidden>
                    @if (item.DateUpdated != null)
                    {
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    }
                    else
                    {
                        <strong>Null</strong>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateMeritList", new { id = item.MeritListId}) |
                    @Html.ActionLink("Details", "MeritListDetail", new { MeritListID = item.MeritListId }) |
                    @Html.ActionLink("Delete", "MeritListDelete", new { MeritListID = item.MeritListId })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable();

    });
    </script>
}