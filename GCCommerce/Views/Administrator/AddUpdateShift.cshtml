@model GCCommerce.Models.ModelShift

@{
    ViewData["Title"] = "AddUpdateShift";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>AddUpdateShift</h2>

<h4>ModelShift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUpdateShift">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ShiftId" class="control-label"></label>
                <input asp-for="ShiftId" class="form-control" />
                <span asp-validation-for="ShiftId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift1" class="control-label"></label>
                <input asp-for="Shift1" class="form-control" />
                <span asp-validation-for="Shift1" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DateUpdated" class="control-label"></label>
                <input asp-for="DateUpdated" class="form-control" />
                <span asp-validation-for="DateUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    if (Model.ShiftId < 1)
                    {
                        <input type="submit" value="Create" class="btn btn-default" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-default" />

                    }
                }

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShiftList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
