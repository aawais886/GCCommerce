@model IEnumerable<GCCommerce.Entities.Program>

@{
    ViewData["Title"] = "ProgramList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>ProgramList</h2>

<p>
    <a asp-action="AddUpdateProgram">Create New</a>
</p>
<table class="table" id="table" name="table">
    <thead>
        <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.ProgramId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FkShiftId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramTitle)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.DateUpdated)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.ProgramId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkShiftId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramTitle)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td hidden>
                @if (item.DateUpdated != null)
                {
                    @Html.DisplayFor(modelItem => item.DateUpdated)

                }
                else
                {
                    <strong>Null</strong>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateProgram", new {  id=item.ProgramId }) |
                @Html.ActionLink("Details", "ProgramDetail", new { ProgramID = item.ProgramId }) |
                @Html.ActionLink("Delete", "ProgramDelete", new { ProgramID = item.ProgramId })
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts{ 
    <script>
        $(document).ready(function () {
            $('#table').DataTable();

        });
    </script>
}